@page
@model HillerødRazorPage.Pages.Boat.GetAllBoatsModel
@{
}
<h1>Både</h1>

<table class="table table-bordered table-hover table-striped">
	<thead>
		<tr>
			<th>
				Id
			</th>
			<th>
				Navn
			</th>
			<th>
				Længde
			</th>
			<th>
				Bredde
			</th>
			<th>
				Mast
			</th>
			<th>
				Vægt
			</th>
			<th>
				Beskrivelse
			</th>
			<th>
				Kommentar
			</th>
			<th>
				Raperationer
			</th>

		</tr>
	</thead>
	<tbody>
		@if (Model.Boats != null)
		{
			foreach (var boat in Model.Boats)
			{
				<tr>
					<td>
						@boat.BoatId
					</td>
					<td>
						@boat.BoatName
					</td>
					<td>
						@boat.Lenght
					</td>
					<td>
						@boat.Width
					</td>
				
					<td>
						@boat.Weight
					</td>
					<td>
						@boat.Description
					</td>
					<td>
						@boat.Comment
					</td>
					<td>
						@boat.RepairsNeeded
					</td>
				</tr>
			}
		}
	</tbody>
</table>

<p>
	<a class="btn btn-primary" asp-page="CreateBoat">Lav en ny båd </a>
</p>
