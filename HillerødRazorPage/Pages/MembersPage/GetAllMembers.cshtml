@page
@model HillerødRazorPage.Pages.MembersPage.GetAllMembersModel
@{
}
<h1>Medlemmer</h1>

<table class="table table-bordered table-hover table-striped">
	<thead>
		<tr>
			<th>
				Id
			</th>
			<th>
				Navn
			</th>
			<th>
				Efternavn
			</th>
			<th>
				Telefon nummer
			</th>
			<th>
				Email
			</th>
			<th>
				Adresse
			</th>

		</tr>
	</thead>
	<tbody>
		@if (Model.Members != null)
		{
			foreach (var member in Model.Members)
			{
				<tr>
					<td>
						@member.Id
					</td>
					<td>
						@member.Name
					</td>
					<td>
						@member.LastName
					</td>
					<td>
						@member.PhoneNumber
					</td>
					<td>
						@member.Email
					</td>
					<td>
						@member.Address
					</td>
					
				</tr>
			}
		}
	</tbody>
</table>

<p>
	<a class="btn btn-primary" asp-page="CreateMembers">Lav et nyt Medlem</a>
</p>